/* pages/order/order.wxss */
.list{
  margin-top:20rpx;
  width: 90%;
  margin: auto 26rpx;
  border-radius: 12rpx;
  font-size: 25rpx;
  color:#333;
}
 
.list .list_item{
  margin-top:20rpx;
  padding:20rpx;
  height:222rpx;
  border-bottom:2rpx solid gainsboro;
}
.list .list_item .img{
  float:left;
  width:200rpx;
  height:200rpx;
  border-radius: 50%;
}
.list .list_item .img image{
   width:100%;
   height:100%;
}
 
.list .list_item .info{
  width:59%;
  float:right;
  height:200rpx;
  position:relative;
}
.list .list_item .info .title{
  color:#333;
  margin-left:20rpx;  
}
 
.list .list_item .info .price{
  margin-left:20rpx;
  margin-top:15rpx;
}
.list .list_item .info .explain{
  margin-left:20rpx;
  margin-top:15rpx;
}
.list .list_item .info .orderNum{
  margin-left:20rpx;
  margin-top:15rpx;
}
.list .list_item .info .purchase{
  width: 140rpx;
  height:50rpx;
  background-color: #20acfb;
  color: white;
  line-height: 50rpx;
  position: absolute;
  left: 290rpx;
  top: 74rpx;
  font-size: 25rpx;
  border-radius: 30rpx;
}